<!-- <?xml version="1.0" encoding="utf-8"?> -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".mainMeteo.MainMeteoFragment">





        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_end_color"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/materialCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:cardElevation="30dp"
                        app:cardCornerRadius="30dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="430dp"
                            android:orientation="vertical">



                            <androidx.cardview.widget.CardView
                                android:layout_width="340dp"
                                android:layout_height="320dp"
                                android:layout_marginLeft="20dp"
                                app:cardBackgroundColor="@color/home"
                                app:cardCornerRadius="20dp"
                                android:layout_marginTop="15dp">

                                <TextView
                                    android:id="@+id/date"
                                    android:layout_width="100dp"
                                    android:layout_height="20dp"
                                    android:layout_marginTop="10dp"
                                    android:text="Lunedi, 20 sep"
                                    android:layout_marginLeft="200dp"/>

                                <ImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/cloud"
                                    android:layout_marginLeft="180dp"
                                    android:layout_marginTop="20dp"/>

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="10dp"
                                    android:text="Today"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="20dp"/>


                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="100dp"
                                    android:layout_marginTop="40dp"
                                    android:text="20°C"
                                    android:textSize="60dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="15dp"/>

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="110dp"
                                    android:text="Feels Like 20°C"
                                    android:textSize="20dp"
                                    android:textStyle="italic"
                                    android:layout_marginLeft="15dp"/>

                                <View
                                    android:layout_width="300dp"
                                    android:layout_height="4dp"
                                    android:background="@android:color/white"
                                    android:layout_marginTop="30dp"
                                    android:layout_gravity="center"
                                    android:backgroundTint="@color/text"

                                    />

                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="210dp"
                                    android:text="13:00"
                                    android:textSize="20dp"
                                    android:layout_marginLeft="10dp"/>

                                <ImageView
                                    android:id="@+id/sunny"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="240dp"
                                    android:src="@drawable/ic_sunny"
                                    android:layout_marginLeft="20dp"
                                    />


                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="280dp"
                                    android:text="20°"
                                    android:textSize="20dp"
                                    android:layout_marginLeft="29dp"/>


                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="210dp"
                                    android:text="13:00"
                                    android:textSize="20dp"
                                    android:layout_marginLeft="80dp"/>

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="240dp"
                                    android:src="@drawable/ic_sunny"
                                    android:layout_marginLeft="90dp"
                                    />

                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="280dp"
                                    android:text="20°"
                                    android:textSize="20dp"
                                    android:layout_marginLeft="98dp"/>

                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="210dp"
                                    android:text="13:00"
                                    android:textSize="20dp"
                                    android:layout_marginLeft="145dp"/>

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="240dp"
                                    android:src="@drawable/ic_sunny"
                                    android:layout_marginLeft="150dp"
                                    />

                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="280dp"
                                    android:text="20°"
                                    android:textSize="20dp"
                                    android:layout_marginLeft="160dp"/>


                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="210dp"
                                    android:text="13:00"
                                    android:textSize="20dp"
                                    android:layout_marginLeft="210dp"/>

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="240dp"
                                    android:src="@drawable/ic_sunny"
                                    android:layout_marginLeft="215dp"
                                    />

                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="280dp"
                                    android:text="20°"
                                    android:textSize="20dp"
                                    android:layout_marginLeft="225dp"/>

                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="210dp"
                                    android:text="13:00"
                                    android:textSize="20dp"
                                    android:layout_marginLeft="270dp"/>

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="240dp"
                                    android:src="@drawable/ic_sunny"
                                    android:layout_marginLeft="280dp"
                                    />

                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="280dp"
                                    android:text="20°"
                                    android:textSize="20dp"
                                    android:layout_marginLeft="290dp"/>


                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginStart="4dp"
                                android:orientation="horizontal">

                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/five"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/materialCard"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/next5Days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="6dp"
                                android:text="5 Giorni >"
                                android:layout_marginRight="30dp"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/write"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_margin="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="20dp"
                            android:backgroundTint="#80A9A9A9"

                            app:cardCornerRadius="20dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/forecastRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="vertical" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_below="@+id/five">

                        <androidx.cardview.widget.CardView
                            android:layout_width="370dp"
                            android:layout_height="250dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="20dp"
                            android:paddingEnd="50dp"
                            app:cardBackgroundColor="@color/md_theme_dark_error"
                            >

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/ic_wind"/>

                            <TextView
                                android:id="@+id/indice_uv"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="80dp"
                                android:textSize="15dp"
                                android:text="Indice UV"/>

                            <TextView
                                android:id="@+id/f"
                                android:layout_width="110dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="250dp"
                                android:textSize="15dp"
                                android:text="Faible"/>


                            <View
                                android:layout_width="350dp"
                                android:layout_height="1dp"
                                android:background="@android:color/white"
                                android:layout_marginTop="-50dp"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/black"

                                />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="80dp"
                                android:src="@drawable/ic_wind"/>

                            <TextView
                                android:id="@+id/vento"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="90dp"
                                android:layout_marginLeft="80dp"
                                android:textSize="15dp"
                                android:text="Vento"/>

                            <TextView
                                android:id="@+id/p"
                                android:layout_width="110dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="90dp"
                                android:layout_marginLeft="250dp"
                                android:textSize="15dp"
                                android:text="Faible"/>


                            <View
                                android:layout_width="350dp"
                                android:layout_height="1dp"
                                android:background="@android:color/white"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/black"

                                />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="140dp"
                                android:src="@drawable/ic_wind"/>
                            <TextView
                                android:id="@+id/Humidity"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="150dp"
                                android:layout_marginLeft="80dp"
                                android:textSize="15dp"
                                android:text="Humidity"/>

                            <TextView
                                android:id="@+id/r"
                                android:layout_width="110dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="150dp"
                                android:layout_marginLeft="250dp"
                                android:textSize="15dp"
                                android:text="Faible"/>

                            <View
                                android:layout_width="350dp"
                                android:layout_height="1dp"
                                android:background="@android:color/white"
                                android:layout_marginTop="70dp"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/black"

                                />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="200dp"
                                android:src="@drawable/ic_wind"/>
                            <TextView
                                android:id="@+id/tenp"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="210dp"
                                android:layout_marginLeft="80dp"
                                android:textSize="15dp"
                                android:text="Tenp"/>

                            <TextView
                                android:id="@+id/e"
                                android:layout_width="110dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="210dp"
                                android:layout_marginLeft="250dp"
                                android:textSize="15dp"
                                android:text="Faible"/>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>



</layout>