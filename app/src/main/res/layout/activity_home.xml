<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_color">


    <EditText
        android:id="@+id/search_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        android:drawableRight="@drawable/ic_search" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="99dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="77dp"
        android:layout_toStartOf="@+id/search_bar"
        android:text="Nome"
        android:textSize="20dp"
        />



    <androidx.cardview.widget.CardView
        android:id="@+id/cardCurrentWeather"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            >

            <!-- Layout pour la température et l'image -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 °"
                        android:textSize="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"/>



                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="70dp"
                        app:srcCompat="@drawable/cloud" />
                </LinearLayout>


            </LinearLayout>

            <!-- Layout pour Wind, Humidity et Visibility -->


            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <!-- Wind -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iimageWind"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_wind"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:id="@+id/textWind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wind"
                        android:textSize="16dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/textWind_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.34 km/h"
                        android:textSize="16dp"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>

                <!-- Humidity -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_humidity"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/textHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:textSize="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/textHumidity_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 %"
                        android:textSize="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>

                <!-- Visibility -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_visibility"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="25dp"/>

                    <TextView
                        android:id="@+id/textVisibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visibility"
                        android:textSize="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/textVisibility_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200000"
                        android:textSize="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerWeeklyForecast"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/cardCurrentWeather"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp" />

</RelativeLayout>