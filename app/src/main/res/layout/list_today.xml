<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="weather"
            type="com.example.meteoapp.modal.WeatherList" />
    </data>



<androidx.cardview.widget.CardView
    app:cardBackgroundColor="@color/md_theme_light_primary"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hourstoday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_margin="8dp"
            android:textColor="@color/text"
            android:textAlignment="center"
            android:text="@{weather.dtTxt}"/>

        <ImageView
            android:id="@+id/imagetemptoday"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/cloud"/>

        <TextView
            android:id="@+id/temperaturetoday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:textColor="@color/text"
            android:textAlignment="center"
            android:text="@{weather.main.temp.toString()}"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>
</layout>